{
    "name": "hotelb/hotel-booking-system",
    "description": "Secure Hotel Room Booking Management System",
    "version": "1.0.0",
    "type": "project",
    "license": "proprietary",
    "keywords": ["hotel", "booking", "php", "mysql", "security", "unikl"],
    "homepage": "http://localhost/hotelb",
    "time": "2026-01-01",
    "authors": [
        {
            "name": "Aiman Marzuki",
            "email": "aiman.marzuki03@s.unikl.edu.my",
            "role": "Developer"
        }
    ],
    
    "require": {
        "php": ">=7.4.0",
        "ext-mysqli": "*",
        "ext-json": "*",
        "ext-session": "*",
        "ext-openssl": "*",
        "ext-filter": "*",
        "ext-mbstring": "*"
    },
    
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13"
    },
    
    "autoload": {
        "files": [
            "config.php",
            "session_security.php",
            "audit_log.php"
        ]
    },
    
    "config": {
        "platform-check": false,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    
    "scripts": {
        "post-install-cmd": [
            "echo '=== Hotel Booking System ==='",
            "echo 'ðŸŽ‰ Dependencies installed successfully!'",
            "echo ''",
            "echo 'âš¡ Quick Commands:'",
            "echo '   composer security:check    - Run security checks'",
            "echo '   composer server:start     - Start development server'",
            "echo ''"
        ],
        
        "security:check": [
            "php -l config.php",
            "php -l session_security.php",
            "php -l audit_log.php",
            "php -l login.php",
            "php -l register.php",
            "php -l book_room.php",
            "php -l my_booking.php",
            "php -l user_profile.php",
            "php -l admin_dashboard.php",
            "php -l logout.php",
            "echo 'âœ… All PHP files have valid syntax'"
        ],
        
        "lint": [
            "phpcs --standard=PSR12 --extensions=php *.php || echo 'Code style check completed'"
        ],
        
        "server:start": [
            "echo 'Starting PHP development server on http://localhost:8000'",
            "php -S localhost:8000 -t ."
        ],
        
        "logs:clear": [
            "> logs/php_errors.log 2>/dev/null || echo 'No logs to clear'",
            "echo 'âœ… Logs cleared'"
        ],
        
        "security:headers": [
            "echo 'Checking security headers...'",
            "curl -I http://localhost/hotelb/ 2>/dev/null || echo 'Server might not be running'"
        ]
    },
    
    "scripts-descriptions": {
        "security:check": "Validate PHP syntax of all core files",
        "lint": "Check code style against PSR12",
        "server:start": "Start PHP development server",
        "logs:clear": "Clear error logs",
        "security:headers": "Check security headers"
    },
    
    "support": {
        "email": "aiman.marzuki03@s.unikl.edu.my",
        "docs": "https://github.com/nikaiman03/Hotel-Booking-SSD-Project/blob/main/README.MD"
    },
    
    "minimum-stability": "stable",
    "prefer-stable": true
}